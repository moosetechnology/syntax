
# To avoid problems with other shells:
SHELL=/bin/sh

SXAUX=$(SX)/aux.$(ARCH)

SXBIN=$(SX)/bin.$(ARCH)

SXCOM=$(SX)/bin

SXINCL=$(SX)/incl

SXLIB=$(SX)/lib.$(ARCH)

SXSRC=$(SX)/src

SXUTIL=$(SX)/util

SXBIBS=$(SXLIB)/libsxutil.a $(SXLIB)/libsx.a

# We inherit $GCC_WARNINGS from the environment (see sxmake)

COMPILER=gcc $(GCC_WARNINGS) $(EXTRA_CFLAGS)

RANLIB=ranlib

AR=ar

ARFLAGS=rcv


