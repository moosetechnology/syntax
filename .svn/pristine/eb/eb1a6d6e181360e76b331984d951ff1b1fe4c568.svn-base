	CONTRAINT	= -"=" -"c"&True (-BLANK&True | ANY @4 @Release @Erase) ; --	@4 => Error CONSTRAINT assumed

	OPTIONAL	= -"=" -"?"&True (-BLANK&True | ANY @4 @Release @Erase) ; --	@4 => Error OPTIONAL assumed

	ADD		= -"+" -"="&True ;

