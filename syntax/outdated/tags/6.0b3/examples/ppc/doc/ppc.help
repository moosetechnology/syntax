ppc - pretty printer for programs written in C.

ppc [ -style nnn ] [ -v ] [ -nv ] [ -of output_file ] [ -nof ]
    [ -T name ] [ -d path ]
    [ -kwlc ] [ -kwuc ] [ -kwci ] [ -kwdk ] [ -nkwdk ]
    [ -ll nnn ] [ -mm nnn ] [ -sm ] [ -nsm ]
    [ -tabs ] [ -notabs ] [ -every nnn ] ... [ input_files ]
